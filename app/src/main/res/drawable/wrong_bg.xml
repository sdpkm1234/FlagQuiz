<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/outline" />
            <stroke
                android:width="1dp"
                android:color="#EBEBEB" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/outline"
                android:endColor="@color/outline"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#EBEBEB" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

</selector>